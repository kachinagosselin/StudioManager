
<%= simple_form_for(@user, :html => {:class => 'form-vertical', :multipart => true }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">   
    <div class="row">
  	  <div class="span5"> 
      <%= f.input :name, :input_html => { :style => 'width: 330px'} %>
      </div>

    </div>
    
  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>