
<div class="row" style="margin-top:-17px;">
	<div class="col-lg-2 leftspan" style="margin-top: 10px;">
		<%= render 'layouts/sidebar' %>
	</div>

	<div class="col-lg-8 rightspan" style="min-height:600px;">
<h3> Instructors for <%= @studio.name %></h3>

<% if @instructors.present? %>
		<table class="table table-condensed">
		    <thead>
		        <tr>
		          <th>Name</th>
		          <th>Email</th>  
		          <th>Phone</th>
		          <th>Date Joined?</th>                             
		        </tr>
		    </thead>
		    <tbody>
		        <% @instructors.each do |user| %>
		        	<tr>
		        		<td><%=link_to user.name, user %></td>
		        		<td><%=link_to user.email, user %></td>
		        		<td><%= user.email if false %></td>
						<% if user.invitation_accepted_at.present? %>
		        		<td><%= user.invitation_accepted_at %></td>
		        		<% else %>
		        		<td>Outstanding invitation</td>
		        		<% end %>
		        	</tr>
		        <% end %>
		    </tbody>
		</table>

<% else %>

	<p> Looks like you don't have any instructors signed up! </p>

	<p> Search our database of users to find your instructors, or send an invitation for them to join the site. 
		<%= link_to 'Send Invitation', new_user_invitation_path() %>
	</p>
		<% @instructor_database = User.with_role(:instructor, :any) %>
			<table class="table table-hover">
		    <thead>
		        <tr>
		          <th>Name</th>
		          <th>Email</th>  
		          <th>Phone</th>
		          <th>Date Joined?</th>                             
		        </tr>
		    </thead>
		    <tbody>
		        <% @instructor_database.each do |user| %>
		        	<tr>
		        		<td><%=link_to user.name, user %></td>
		        		<td><%=link_to user.email, user %></td>
		        		<td><%= user.email if false %></td>
						<% if user.invitation_accepted_at.present? %>
		        		<td><%= user.invitation_accepted_at %></td>
		        		<% else %>
		        		<td>Outstanding invitation</td>
		        		<% end %>
		        	</tr>
		        <% end %>
		    </tbody>
		</table>
<% end %>
</div>
</div>