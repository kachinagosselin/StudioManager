
<%= form_for(@studio, :html => {:class => 'form-vertical', :multipart => true }) do |f| %>

<div class="row">
<div class="row" style ="margin-left:0px;">
  <div class="form-group col-lg-6">
  <div><%=h f.label :name %><br />
    <%=h f.text_field :name, :class => "form-control"%></div>
  <div><%= f.label :address %><br />
    <%= f.text_field :address, :class => "form-control" %></div>
    <div class="row">
        <div class="form-group col-lg-8">
          <div><%= f.label :city %><br />
            <%= f.text_field :city, :class => "form-control" %></div>  
        </div>
        <div class="form-group col-lg-4">
          <div><%= f.label :state %><br />
            <%= select_tag(:state, options_for_select(STATES, @studio.state), :class => "form-control") %>
        </div>
    </div>
    </div>
</div>
  <div class="form-group col-lg-6">
    <div><%= f.label :main_phone %><br />
    <%= f.text_field :main_phone, :class => "form-control" %></div>  
    <div><%= f.label :website %><br />
    <%= f.url_field :website, :class => "form-control" %></div>  
    <div><%= f.label :cancellation_policy %><br/>
    <%= f.text_area :cancellation_policy, :class => "form-control" %></div>  
    <div><%= f.label :student_waiver %><br/>
    <%= f.text_area :student_waiver, :class => "form-control" %></div>    
   <div><%= f.label :instructor_waiver, "Instructor Contract"%><br/>
    <%= f.text_area :instructor_waiver, :class => "form-control" %></div>    
   </div>

</div>

  <div class="form-actions">
  <div><%= f.submit "Update", :class => "btn btn-primary pull-right" %></div>  </div>
<% end %>
</div>