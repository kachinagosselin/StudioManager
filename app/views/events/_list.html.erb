<div>
  <div class="col-lg-4">
  <h3>Studio Classes</h3>
</div>

<div class="col-lg-6" style ="margin-top:15px;">
  <%= form_for @search, :url => calendar_path, :html => {:method => :get} do |f| %>
    <div class="input-group">
        <%= f.text_field :title_contains, :class => "form-control"  %>
        <span class="input-group-btn">
          <button type="submit" class="btn btn-primary">Search</button>
        </span>
      </div><!-- /input-group -->
  <% end %>
</div> 

      <div class="col-lg-2" style ="margin-top:15px;">
                <%= link_to 'Create an Event', new_studio_event_path(@studio),
        :class => 'btn btn-primary btn-sm pull-right' ,  :data => {:toggle => "modal", :target => "#newModal"} , :remote => true, :html => {:style => "margin-top:20px;"}%>
      </div>
</div>


    <table class="table table-hover">
        <thead>
            <tr>
              <th></th>
              <th>Start Time</th>
              <th>Title</th>
              <th>Location</th>
              <th>Duration</th>
            </tr>       
        </thead>
        <tbody>
            <% @events.each do |event| %>
              <tr>

              <td><%= event.title%></td>
              <td></td>
                  <td></td>
                  <td></td>
              </tr>
            <% end %>
        </tbody>
    </table>

<div>
    <%= render 'events/new' %>
</div>
<div>
    <%= render 'events/edit' %>
</div>
