

<div>
  <div class="col-lg-4">
  <h3>Studio Classes</h3>
</div>

<div class="col-lg-6" style ="margin-top:15px;">
  <%= form_for @search, :url => calendar_path, :html => {:method => :get} do |f| %>
    <div class="input-group">
        <%= f.text_field :title_contains, :class => "form-control"  %>
        <span class="input-group-btn">
          <button type="submit" class="btn btn-primary">Search</button>
        </span>
      </div><!-- /input-group -->
  <% end %>
</div> 

      <div class="col-lg-2" style ="margin-top:15px;">
                <%= link_to 'Create an Event', new_studio_event_path(@studio),
        :class => 'btn btn-primary btn-sm pull-right' ,  :data => {:toggle => "modal", :target => "#newModal"} , :remote => true, :html => {:style => "margin-top:20px;"}%>
      </div>
</div>


    <table class="table table-hover">
        <thead>
            <tr>
              <th>Date</th>
              <th>Title</th>
              <th>Start Time</th>
              <th>Location</th>
              <th>Duration</th>
              <th></th>
              <th></th>
            </tr>       
        </thead>
        <tbody>
            <% @events.each do |event| %>
              <tr>

              <td><%= event.day_of_week %></td>
              <td><%= link_to event.title, studio_event_path(event.studio,event)%></td>
              <td><%= event.start_time %></td>
              <td><%= @studio.address %></td>
              <td><%= event.duration %></td>
                <td><%= link_to 'Edit', edit_studio_event_path(event.studio, event),  :data => {:toggle => "modal", :target => "#editModal#{event.id}"}, :remote => true, :class => 'btn btn-default btn-xs' %>  </td>
                    <%= render :partial => 'events/edit', :locals => {:event => event}%>
                  <td><%= button_to 'Delete', [event.studio, event], method: :delete, data: { confirm: 'Are you sure? This action cannot be undone.' }, :class => 'btn btn-default btn-xs' %></td>
              </tr>
            <% end %>
        </tbody>
    </table>

<div>
    <%= render 'events/new' %>
</div>
