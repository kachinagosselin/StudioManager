
     <div class="modal-body">
    <%= form_for([@studio, @membership], :html => { :class => 'form-horizontal', :remote => true } ) do |f| %>
        <div class="form-group">
          <%= f.label :name %>
            <%= f.text_field :name, :class => "form-control" %>
                <div class="form-group  col-lg-6">
                <%= f.label :price %>
                <%= f.number_field :price, :class => "form-control"%>

                <%= f.label :trial_period_days %>
                <%= f.number_field :trial_period_days, :class => "form-control"%>
                </div>

                <div class="form-group  col-lg-5" style ="margin-left:10px;">
                <%= f.label :interval %>
                <%= f.text_field :interval, :class => "form-control" %>

                <%= f.label :interval_count %>
                <%= f.number_field :interval_count, :class => "form-control" %>
                </div>
                </div>

            <div id="stripe_error">
            <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
            </div>
      <div class="modal-footer">
    <div class="actions">
        <a class="btn" data-dismiss="modal" href="#">Cancel</a>
          <button type="submit" class="btn btn-primary">Submit</button>
        <% end %>
    </div>     
    </div>     
