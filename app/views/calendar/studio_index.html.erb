<%= javascript_include_tag "fullcalendar.js" %>


<script> 
$(document).ready(function() {
    // page is now ready, initialize the calendar...
document.getElementById("event_instructor").classList.add('form-control');

$('#calendar').fullCalendar({
	header: {
  	left: 'prev,next today',
  	center: 'title',
  	right: 'month,agendaWeek,agendaDay'
	},
    eventSources: [{
          url: '/studios/<%= @studio.id %>/calendar.json',
        }],
    eventClick: function(event) {
        if (event.url) {
            window.open(event.url);
            return false;
        }
    },
});

    $('.form_datetime').datetimepicker({
        weekStart: 1,
        autoclose: 1,
        maxView: 3,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
      });
});
</script>

  <%= render "layouts/sidebar" %>

  <div class="col-lg-11">
  <div id='calendar'></div>

  <%= render 'list' %>

</div>
</div>