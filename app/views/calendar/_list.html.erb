

<div>
  <div class="col-lg-4">
  <h3>Studio Classes</h3>
</div>

<div class="col-lg-6" style ="margin-top:15px;">
  <%= form_for @search, :url => locals[:url], :html => {:method => :get} do |f| %>
    <div class="input-group">
        <%= f.text_field :title_contains, :class => "form-control"  %>
        <span class="input-group-btn">
          <button type="submit" class="btn btn-primary">Search</button>
        </span>
      </div><!-- /input-group -->
  <% end %>
</div> 

      <div class="col-lg-2" style ="margin-top:15px;">
                <%= link_to 'Create an Event', locals[:new_url], #new_studio_event_path(@studio),
        :class => 'btn btn-primary btn-sm pull-right' ,  :data => {:toggle => "modal", :target => "#newModal"} , :remote => true, :html => {:style => "margin-top:20px;"}%>
      </div>
</div>


    <table class="table table-hover">
        <thead>
            <tr>
              <th>Date</th>
              <th>Title</th>
              <th>Start Time</th>
              <th>Location</th>
              <th>Duration</th>
              <th></th>
              <th></th>
            </tr>       
        </thead>
        <tbody>
            <% @events.each do |event| %>
              <tr>

              <td><%= event.day_of_week %>, <%= event.date_condensed %></td>
              <td><%= link_to event.title, event_path(event)%></td>
              <td><%= event.start_time %></td>
              <td><%= event.url %></td>
              <td><%= event.duration %></td>
                <td><%= link_to 'Edit', edit_event_path(event),  :data => {:toggle => "modal", :target => "#editModal#{event.id}"}, :remote => true, :class => 'btn btn-default btn-xs' %>  </td>
                    <% if current_user.active_role.resource_type == "User" %>
                    <%= render :partial => 'events/edit', :locals => {:account_type => @professional, :event => event}%>
                    <% elsif current_user.active_role.resource_type == "Studio"%>
                    <%= render :partial => 'events/edit', :locals => {:account_type => @studio, :event => event}%>
                    <% end %>
                  <td><%= button_to 'Delete', [event], method: :delete, data: { confirm: 'Are you sure? This action cannot be undone.' }, :class => 'btn btn-default btn-xs', :id=>'delete_event', :remote => true  %></td>
              </tr>
            <% end %>
        </tbody>
    </table>

<div>
    <%= render 'events/new', :account_type => locals[:account_type] %>
</div>
