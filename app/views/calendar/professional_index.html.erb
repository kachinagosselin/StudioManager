<%= javascript_include_tag "fullcalendar.js" %>


<script> 
$(document).ready(function() {
    // page is now ready, initialize the calendar...

$('#calendar').fullCalendar({
	header: {
  	left: 'prev,next today',
  	center: 'title',
  	right: 'month,agendaWeek,agendaDay'
	},
    eventSources: [{
          url: '@events.json',
        }],
});

    $('.form_datetime').datetimepicker({
        weekStart: 1,
        autoclose: 1,
        maxView: 3,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
      });
});
</script>

  <%= render "layouts/sidebar" %>

  <div class="col-lg-11">
  <div id='calendar'></div>

  <%= render 'list', :locals => {:url => professional_calendar_path, :new_url => new_user_event_path(current_user), :account_type => current_user} %>

</div>
</div>