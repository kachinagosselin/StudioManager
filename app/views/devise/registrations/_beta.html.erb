  <%= form_for("user", :url => user_registration_path, :html => {:class => 'form-vertical' }) do |form| %>
  <%= form.text_field :name, :placeholder => "Your Name", :autofocus => true, :required => true, :id => "user_name_register"%>
  <%= form.text_field :email, :placeholder => "Email Address", :required => true, :id => "user_email_register"%>  
  <%= form.submit "Sign up", :class => 'btn btn-submit btn-primary' %>
  <% end %>
  
