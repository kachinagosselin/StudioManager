<div class="modal" id="signupModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="fade-box">

      <div class="modal-body" id="landing-content" style="height:200px;padding:20px 20px 0px 20px;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="color:white;"onclick = "$('#signupModal').modal('hide');toggleID('section#landing-content');">&times;
        </button>
        <h2 style="color:white;">Welcome back!</h2>
        <%= simple_form_for("user", :url => user_session_path, :html => {:class => "navbar-form navbar-right"}) do |f| %>
        <div class="form-group">
          <%= f.text_field :email, :required => true, :autofocus => true, :placeholder => "Email Address"%>
          <%= f.password_field :password, :required => true, :placeholder => "Password" %>

          <div class="actions" style="width:300px;margin:0 auto;">
            <%= f.submit "Sign in", :class => "btn btn-default btn-sm pull-right", :style => "width:100%;" %>
          </div>     
        </div>

        <% end %>

      </div><!-- /.modal-body -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

