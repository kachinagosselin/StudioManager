<%= simple_form_for("user", :url => user_session_path, :html => {:class => "navbar-form navbar-right"}) do |f| %>
  <div class="form-group">
    <%= f.text_field :email, :required => false, :autofocus => true, :placeholder => "email", :class => "form-control input-sm"%>
    <%= f.password_field :password, :required => false, :placeholder => "password", :class => "form-control input-sm", :style => "width:100px;" %>

    <%= f.submit "Sign in", :class => "btn btn-default btn-sm" %>
    <%= link_to 'Register', new_user_registration_path(),
        :class => 'btn btn-default btn-sm' ,  :data => {:toggle => "modal", :target => "#registerModal"} , :remote => true, :html => {:style => "margin-top:5px;"}%>
  </div>

<% end %>



