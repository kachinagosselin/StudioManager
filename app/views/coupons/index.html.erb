
<div class="row">
	<div class="col-lg-2 leftspan" style="margin-top: 10px;">
		<%= render 'layouts/sidebar' %>
	</div>

	<div class="col-lg-8 rightspan" style="min-height:600px;">
		<h3> Coupons</h3>
			<div class="pull-right" style="margin-top:-40px;">
				  <%= link_to 'New Coupon', new_studio_coupon_path(@studio),
        :class => 'btn btn-primary btn-sm' ,  :data => {:toggle => "modal", :target => "#myModal"} , :remote => true, :html => {:style => "margin-top:5px;"}%>

			</div>
			<div class="divider-horizontal-regular"></div>
				<table class="table table-hover" style="width:100%;">
				    <thead>
				        <tr>
				          <th>Title</th>
				          <th>Type</th>  
				          <th>Amount Off</th>
				          <th>Duration</th>                             
				          <th>Max Redemptions</th>                          
				          <th>Redeem By</th>   
				          <th></th>
				          <th></th>                          
				        </tr>
				    </thead>
				    <tbody>
				    	<% @coupons = @studio.coupons.find(:all)%>
				        <% @coupons.each do |coupon| %>
				        	<tr>
				        		<td><%= coupon.title %></td>
				        		<td><%= coupon.duration%></td>
				        		<td><%= coupon.amount_off if coupon.amount_off?%> 
				        			<%= coupon.percent_off if coupon.percent_off?%>
				        		</td>						
				        		<td><%= coupon.duration_in_months if coupon.duration_in_months?%></td>		        		<td><%= coupon.max_redemptions if coupon.max_redemptions?%></td>
								<td><%= coupon.redeem_by if coupon.redeem_by?%></td>
				  				<td>'edit'</td>
    							<td><%= link_to 'Delete', [coupon.studio, coupon], method: :delete, data: { confirm: 'Are you sure? This action cannot be undone.' }%></td>
				        	</tr>
				        <% end %>
				</table>
</div>
</div>



  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create Coupon</h4>
      </div>
 		<%= render 'form' %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

