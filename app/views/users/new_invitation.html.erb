<h2>Send invitation</h2>

<%= semantic_form_for @user, :url => send_invitation_admin_users_path do |f| %>
  <% f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email, :required => true %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Send an Invitation" %>
  <% end %>
<% end %>