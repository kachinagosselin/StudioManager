
<% content_for :nav do %>
  <%= render 'layouts/nav/admin' %>
<% end %>

<div class="col-xs-8 col-xs-offset-2">

  <div class="row">
  <div class="col-xs-6">
    <h3 class="page-title">All Users</h3>
  </div>

  <div class="col-xs-6">
    <%= form_for @search, :url => users_path do |f| %>
      <div class="input-group">
          <%= f.text_field :name_contains, :class => "form-control"  %>
          <span class="input-group-btn">
            <button type="submit" class="btn btn-primary">Search</button>
          </span>
        </div><!-- /input-group -->
    <% end %>
  </div> 
</div>
<hr>

    <table class="table table-hover">
        <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Signed Up</th>
              <th></th>
              <th><%= link_to raw("<span class=\"glyphicon glyphicon-plus-sign\" style=\"font-size:18px;\"></span>".html_safe), '',  :data => {:toggle => "modal", :target => "#newModal"} , :remote => true %></th>                          
            </tr>       
        </thead>
        <tbody>

            <% @users.each do |user| %>
              <tr>

              <td><%= link_to user.profile.name, user.profile %></td>
              <td><%= user.email %></td>
              <td><%= user.profile.created_at.to_date %></td>

              </tr>
              <% end %>
        </tbody>
    </table>
</br>
<hr>

  <div class="row">
  <div class="col-xs-6">
    <h3 class="page-title">Unregistered Profiles</h3>
  </div>

  <div class="col-xs-6">
    <%= form_for @search_profiles, :url => users_path do |f| %>
      <div class="input-group">
          <%= f.text_field :name_contains, :class => "form-control"  %>
          <span class="input-group-btn">
            <button type="submit" class="btn btn-primary">Search</button>
          </span>
        </div><!-- /input-group -->
    <% end %>
  </div> 
</div>
<hr>

    <table class="table table-hover">
        <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Signed Up</th>
              <th></th>
              <th><%= link_to raw("<span class=\"glyphicon glyphicon-plus-sign\" style=\"font-size:18px;\"></span>".html_safe), '',  :data => {:toggle => "modal", :target => "#newModal"} , :remote => true %></th>                          
            </tr>       
        </thead>
        <tbody>

            <% @profiles.each do |profile| %>
              <tr>

              <td><%= link_to profile.name, profile %></td>
              <td><%= profile.email %></td>
              <td><%= profile.created_at.to_date %></td>

              </tr>
              <% end %>
        </tbody>
    </table>

</div>