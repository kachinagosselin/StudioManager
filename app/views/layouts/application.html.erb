<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">


    <!-- Bootstrap core CSS -->
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "datepicker" %>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc2/css/bootstrap-glyphicons.css">
    <%= javascript_include_tag "application", :media => "all" %>
    <%= javascript_include_tag "bootstrap.js" %>
    <%= javascript_include_tag "fullcalendar.js" %>
    <%= favicon_link_tag '/favicon.ico' %>
    <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>

    <% if Rails.env.development? %>
    <% Stripe.api_key %>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
    <% else %>
    <% Stripe.api_key = ENV['STRIPE_API_KEY'] %>
    <%= tag :meta, :name => "stripe-key", :content => ENV['STRIPE_PUBLIC_KEY'] %>
    <% end %>

  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="height:50px;">
      <div class="container" style="height:50px;">
        <div class="navbar-header">

          <%= render 'layouts/navigation' %>

        </div><!--/.navbar-collapse -->
      </div>
    </div>

    <%= yield(:nav) %> 
      <%= yield(:sidebar) %>

    <div class="container-non-responsive">
      <%= yield %>
    </div>
    
    <footer>
      <%= render 'layouts/footer' %>
      <%= yield :scripts %>
    </footer>

  </body>
</html>