
<% if user_signed_in? %>
<nav class="main-nav">
	<div class="container">
		<% if current_user.active_role.name != "student" %>

		<ul>
			<li><%= link_to raw("<span class=\"glyphicon glyphicon-home\"></span>".html_safe), root_path %></li>
    		<li><%= link_to 'Dashboard', root_path() %></li>
    		<li><%= link_to 'Calendar', calendar_path %></li>
    		<li><%= link_to 'Events', events_path %></li>
            
            <% if current_user.customer.present? && current_user.customer.access_token.present? %>
            <li><%= link_to 'Products', products_path %></li>
            <% end %>

    		<% if current_user.active_role.name == "owner"%>
    		<li><%= link_to 'Instructors', staff_index_path %></li>
    		<% end %>

    		<li><%= link_to 'Students', students_path %></li>

            <% if current_user.customer.present? && !current_user.customer.access_token.present? %>
           <li><%= link_to 'Upgrade Services', settings_upgrade_path() %></li>
            <% end %>

    		</ul>
		<% end %>
	</div>
</nav>
<% end %>

			
